{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "pretty": true,
    "target": "ES6",
    "lib": ["ES2017","DOM"],
    "resolveJsonModule": true,
    "typeRoots" : ["./node_modules/@types"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "engine/build"
  },
  "include": [
    "engine/src/**/*.*"
  ]
}